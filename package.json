{
  "name": "relovely",
  "version": "1.0.0",
  "description": "A social commerce app",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8.9"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist *.tsbuildinfo",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t relovely .",
    "docker:run": "docker run --env-file ./env.config -p 3000:3001 -d relovely",
    "docker:stop": "docker rm -f $(docker ps -a -q)",
    "docker:clean": "docker rmi -f $(docker images -q)",
    "migrate": "node ./dist/migrate",
    "prestart": "npm run build",
    "start": "node -r source-map-support/register .",
    "start:watch": "tsc-watch --target es2017 --outDir ./dist --onSuccess \"node .\"",
    "prepublishOnly": "npm run test"
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^3.3.3",
    "@loopback/boot": "^1.7.1",
    "@loopback/context": "^1.25.1",
    "@loopback/core": "^1.12.1",
    "@loopback/openapi-v3": "^1.11.0",
    "@loopback/repository": "^1.17.0",
    "@loopback/rest": "^1.25.1",
    "@loopback/rest-explorer": "^1.4.7",
    "@loopback/service-proxy": "^1.3.14",
    "@types/bcrypt": "^3.0.0",
    "@types/request-promise": "^4.1.45",
    "bcrypt": "^3.0.8",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "loopback-connector-mongodb": "^4.2.0",
    "loopback-connector-rest": "^3.6.0",
    "request-promise": "^4.2.5",
    "strong-error-handler": "^3.4.0",
    "tsc-watch": "^4.1.0"
  },
  "devDependencies": {
    "@loopback/build": "^3.0.1",
    "source-map-support": "^0.5.16",
    "@loopback/testlab": "^1.10.1",
    "@types/node": "^10.17.13",
    "@typescript-eslint/parser": "^2.15.0",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@loopback/eslint-config": "^5.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "eslint-plugin-mocha": "^6.2.2",
    "typescript": "~3.7.4"
  }
}
